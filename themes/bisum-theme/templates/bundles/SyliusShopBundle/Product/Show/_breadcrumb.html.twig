<div class="breadcrumb">
	<div class="container">
		<ul class="list-unstyled d-flex align-items-center m-0">

			<li>
				<a href="{{ path('sylius_shop_homepage') }}" class="nav-link-sub nav-text-sub">{{ 'sylius.ui.home'|trans }}</a>
			</li>
			<li>
				<svg class="icon icon-breadcrumb" width="64" height="64" viewbox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
					<g opacity="0.4">
						<path d="M25.9375 8.5625L23.0625 11.4375L43.625 32L23.0625 52.5625L25.9375 55.4375L47.9375 33.4375L49.3125 32L47.9375 30.5625L25.9375 8.5625Z" fill="#000"/>
					</g>
				</svg>
			</li>
			{% if product.mainTaxon is not null %}
				{% set taxon = product.mainTaxon %}
				{% set ancestors = taxon.ancestors|reverse %}

				{% for ancestor in ancestors %}
					<li>
						{% if ancestor.isRoot() %}
							<a href="#">{{ ancestor.name }}</a>
						{% else %}
							<a href="{{ path('sylius_shop_product_index', {'slug': ancestor.slug, '_locale': ancestor.translation.locale}) }}"  class="nav-link-sub nav-text-sub">{{ ancestor.name }}</a>
						{% endif %}
					</li>
					<li>
						<svg class="icon icon-breadcrumb" width="64" height="64" viewbox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
							<g opacity="0.4">
								<path d="M25.9375 8.5625L23.0625 11.4375L43.625 32L23.0625 52.5625L25.9375 55.4375L47.9375 33.4375L49.3125 32L47.9375 30.5625L25.9375 8.5625Z" fill="#000"/>
							</g>
						</svg>
					</li>
				{% endfor %}

				<a href="{{ path('sylius_shop_product_index', {'slug': taxon.slug, '_locale': taxon.translation.locale}) }}">{{ taxon.name }}</a>
				<li>
					<svg class="icon icon-breadcrumb" width="64" height="64" viewbox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
						<g opacity="0.4">
							<path d="M25.9375 8.5625L23.0625 11.4375L43.625 32L23.0625 52.5625L25.9375 55.4375L47.9375 33.4375L49.3125 32L47.9375 30.5625L25.9375 8.5625Z" fill="#000"/>
						</g>
					</svg>
				</li>
			{% endif %}

			<li>{{ product.name }}</li>
		</ul>
	</div>
</div>
