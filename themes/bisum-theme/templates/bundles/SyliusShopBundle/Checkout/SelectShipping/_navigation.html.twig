{% set enabled = order.shipments|length %}

<div class="row">
    <div class="col">
        <a href="{{ path('sylius_shop_checkout_address') }}" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> {{ 'sylius.ui.change_address'|trans }}</a>
    </div>
    <div class="col text-end">
        <button type="submit" id="next-step" class="btn btn-primary {% if not enabled %} disabled{% endif %}" {{ sylius_test_html_attribute('next-step') }}>
            <i class="fa fa-arrow-right"></i>
            {{ 'sylius.ui.next'|trans }}
        </button>
    </div>
</div>
